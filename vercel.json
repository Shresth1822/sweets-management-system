{
  "version": 2,
  "builds": [
    { "src": "server/api/index.ts", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/api/index.ts" },
    { "source": "(.*)", "destination": "/client/index.html" }
  ]
}
